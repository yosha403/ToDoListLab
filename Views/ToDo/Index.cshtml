@model IEnumerable<ToDoListLab.Models.ToDo>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Add a new task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursNeeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursNeeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id/* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new {id=item.Id /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new {id=item.Id /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
